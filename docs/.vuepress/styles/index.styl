p ul ol
  line-height: 2.2;
  font-size: 14px;

li
  line-height: 2.2;
  font-size 14px;

// `>` 代码注释块
blockquote
  font-size: 1rem;
  padding: 0.5rem 0 0.5rem 1rem;
  color: #999;
  background-color: rgba(27, 31, 35, 0.05);

// 导航栏左侧图片
.navbar .logo
  border-radius 50%;

// 首页右侧信息栏 title
.blogger .name
  text-align center !important;

// 首页右侧信息栏 头像
.avatar
  text-align center;
.avatar img
  border-radius 50%;
  width 64% !important;
  height 100%;
  margin 20px 10px 10px 10px;

// 首页右侧信息栏
.post-list .post
  border-radius 0.5rem;

// 文章部分
.content__default h2
  position: relative;
  padding-left 0.8rem;
  // 解决对 h2 进行相对定位后，原主题距离顶部文档流遮挡部分解决
  margin-top: 0 !important;
  padding-top: 2.6rem !important;
  // H2 标题伪类
  &:before
    position: absolute;
    left: 0;
    top: 2.7rem;
    display: block;
    height: 1.8rem;
    content: "";
    border-left: 5px solid #3178c6;
    border-radius: 3px 0 0 3px;

// H2 标题 前面的 # 定位
h2 .header-anchor
  position: absolute;
  left: 0;
  top: 2.6rem;

.content__default h3
  position relative;
  padding-left 0.8rem;
  // 解决对 h3 进行相对定位后，原主题距离顶部文档流遮挡部分解决
  //pointer-events: none;
  margin-top: 0 !important;
  padding-top: 1rem !important;
  // H3 标题伪类
  &:before
    position: absolute;
    left: 0;
    bottom: 2px;
    display: block;
    height: 1.3rem;
    content: "";
    border-left: 5px solid #e67e22;
    border-radius: 3px 0 0 3px;

// H3 标题 前面的 # 定位
h3 .header-anchor
  position: absolute;
  left: 0;
  top: 4.6rem;

// 正常模式下 h3 # 位置
.content__default h3 .header-anchor
  top 1rem;
// 暗黑模式下 h3 # 位置
.theme-mode-dark h3 .header-anchor
  top 1rem;

// 阅读模式下 h3 # 位置
.content__default h3 .header-anchor
  top 1rem;

